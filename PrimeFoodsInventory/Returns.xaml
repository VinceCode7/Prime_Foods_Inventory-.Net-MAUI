<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeFoodsInventory.Returns"
             BackgroundColor="Green"
             IconImageSource="returns.jpg"
             Title="Returns"
            >
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Grid  BackgroundColor="Green" RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*" RowSpacing="10">


                <Label Text="Product Category:" TextColor="Black" Grid.Row="0" Grid.Column="0"  HorizontalOptions="Start"/>
                <Picker x:Name="CategoryPicker" BackgroundColor="Grey" Grid.Row="0" Grid.Column="0" Margin="1" WidthRequest="220" SelectedIndexChanged="CategoryPicker_SelectedIndexChanged"/>

                <Label Text="Product Name:" TextColor="Black" Grid.Row="0" Grid.Column="1" HorizontalOptions="Start"/>
                <Picker x:Name="ProductPicker" BackgroundColor="Grey" Grid.Row="0" Grid.Column="1" Margin="1" WidthRequest="250" SelectedIndexChanged="ProductPicker_SelectedIndexChanged"
 />

                <Label Text="Product Quantity:" TextColor="Black" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Entry  x:Name="quatityEntry" BackgroundColor="White" TextColor="Black" Placeholder="Enter quantity" Keyboard="Numeric" Grid.Row="1" Grid.Column="1" Margin="5" HorizontalOptions="Start" WidthRequest="350"/>
                <Label x:Name="UnitOfMeasurementLbl" Text="KGS" TextColor="Black" Grid.Row="1" Grid.Column="1" Margin="5" VerticalOptions="Center" HorizontalOptions="Center"/>

                <Label Text="Returned By:" TextColor="Black" Grid.Row="2" Grid.Column="0"  VerticalOptions="Center" HorizontalOptions="Center"/>
                <Entry  x:Name="ReturnedByEntry" BackgroundColor="White" TextColor="Black" Placeholder="Person Given the product" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <Label Text="Returned To:" TextColor="Black" Grid.Row="3" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Entry x:Name="ReturnedToEntry" Placeholder="Person Giving the product" BackgroundColor="White" TextColor="Black" Keyboard="Numeric" Grid.Row="3" Grid.Column="1" Margin="5"/>

                <RadioButton x:Name="RejectRDB" Grid.Row="4" Grid.Column="0" HorizontalOptions="Center" WidthRequest="200" VerticalOptions="Center" />
                <Label Text="Rejects" TextColor="Black" Grid.Row="4" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="100" HeightRequest="33"/>

                <RadioButton x:Name="NotRejectRDB" Grid.Row="5" Grid.Column="1" WidthRequest="200" VerticalOptions="Center"/>
                <Label Text="Not Rejects" TextColor="Black" Grid.Row="5" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="100" HeightRequest="33"/>

            </Grid>
            <Button x:Name="SubmitBtn" Text="Submit" Clicked="SubmitBtn_Clicked" HorizontalOptions="Center" Margin="25" IsEnabled="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>